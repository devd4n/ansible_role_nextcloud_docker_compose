version: '3'

services:
  nextcloud-db:
    container_name: {{ docker_nextcloud_container_prefix }}-db
    image: mariadb:{{ docker_nextcloud_mariadb_image }}
    restart: always
    networks:
      - nextcloud-db-network
    command: --transaction-isolation=READ-COMMITTED --binlog-format=ROW
    volumes:
      - "{{ docker_nextcloud_db_dir }}:/var/lib/mysql"
    environment:
      - MYSQL_ROOT_PASSWORD="{{ docker_nextcloud_mariadb_root_password }}"
      - MYSQL_PASSWORD="{{ docker_nextcloud_mariadb_user_password }}"
      - MYSQL_DATABASE="{{ docker_nextcloud_mariadb_db_name }}"
      - MYSQL_USER="{{ docker_nextcloud_mariadb_db_user }}"

  nextcloud:
    container_name: {{ docker_nextcloud_container_prefix }}-app
    depends_on:
      - nextcloud-db
    image: nextcloud:{{ docker_nextcloud_image | default('latest') }}
    restart: always
    networks:
      - "{{ docker_nextcloud_proxy_network }}"
      - nextcloud-db-network
    ports:
      - "8080:80"
    volumes:
      - "{{ docker_nextcloud_www_dir }}:/var/www/html"
      - "{{ docker_nextcloud_config_dir }}:/var/www/html/config"
      - "{{ docker_nextcloud_data_dir }}:/var/www/html/data"
      - "{{ docker_nextcloud_config_dir }}/php.ini:/usr/local/etc/php/php.ini"
      - "{{ docker_nextcloud_custom_apps_dir }}:/var/www/html/custom_apps"
    environment:
      - MYSQL_PASSWORD="{{ docker_nextcloud_mariadb_user_password }}"
      - MYSQL_DATABASE="{{ docker_nextcloud_mariadb_db_name }}"
      - MYSQL_USER="{{ docker_nextcloud_mariadb_db_user }}"
      - MYSQL_HOST=nextcloud-db
      - VIRTUAL_HOST="{{ docker_nextcloud_fqdn }}"
      - APACHE_DISABLE_REWRITE_IP=1
      - OVERWRITEPROTOCOL=https
      - NEXTCLOUD_ADMIN_USER="{{ docker_nextcloud_admin_user }}"
      - NEXTCLOUD_ADMIN_PASSWORD="{{ docker_nextcloud_admin_password }}"


networks:
  {{ docker_nextcloud_proxy_network }}:
    external: true
  nextcloud-db-network: